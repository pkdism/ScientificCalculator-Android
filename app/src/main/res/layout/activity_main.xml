<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cpluscplus.pawan.scientificcalculator.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tan"
        android:layout_alignRight="@+id/cosine"
        android:layout_alignEnd="@+id/cosine"
        android:layout_toLeftOf="@+id/tan" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/dot"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="OnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="pi"
            android:id="@+id/pi"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="pi"
            android:layout_below="@+id/divide"
            android:layout_toLeftOf="@+id/log2"
            android:layout_toStartOf="@+id/log2" />

    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="sin"
        android:id="@+id/sine"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="sine"
        android:layout_above="@+id/cosine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="cos"
        android:id="@+id/cosine"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="cosine"
        android:layout_above="@+id/tan"
        android:layout_alignLeft="@+id/tan"
        android:layout_alignStart="@+id/tan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="tan"
        android:id="@+id/tan"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="tangent"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="log2"
        android:id="@+id/log2"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="log2"
        android:layout_alignTop="@+id/divide"
        android:layout_alignLeft="@+id/tan"
        android:layout_alignStart="@+id/tan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="log10"
        android:id="@+id/log10"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_below="@+id/log2"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="log10" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="loge"
        android:id="@+id/loge"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_below="@+id/log10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/log10"
        android:layout_alignStart="@+id/log10"
        android:onClick="loge" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="e^x"
        android:id="@+id/epowerx"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="epowerx" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="x^2"
        android:id="@+id/xsquare"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_below="@+id/gridLayout"
        android:layout_toRightOf="@+id/epowerx"
        android:layout_toEndOf="@+id/epowerx"
        android:onClick="square" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="x^y"
        android:id="@+id/xpowery"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="OnAdd"
        android:layout_below="@+id/gridLayout"
        android:layout_toRightOf="@+id/xsquare"
        android:layout_toEndOf="@+id/xsquare" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear"
        android:layout_row="1"
        android:layout_column="5"
        android:onClick="OnClear"
        android:layout_below="@+id/epowerx"
        android:layout_toLeftOf="@+id/equal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equal"
        android:layout_row="4"
        android:layout_column="2"
        android:onClick="OnCalculate"
        android:layout_below="@+id/log2"
        android:layout_alignRight="@+id/log2"
        android:layout_alignEnd="@+id/log2"
        android:layout_toRightOf="@+id/xpowery"
        android:layout_toEndOf="@+id/xpowery" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus"
        android:layout_row="0"
        android:layout_column="3"
        android:onClick="OnAdd"
        android:layout_alignTop="@+id/sine"
        android:layout_toLeftOf="@+id/sine"
        android:layout_toStartOf="@+id/sine" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divide"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="OnAdd"
        android:layout_below="@+id/gridLayout"
        android:layout_toLeftOf="@+id/tan"
        android:layout_toStartOf="@+id/tan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_row="2"
        android:layout_column="3"
        android:onClick="OnAdd"
        android:layout_below="@+id/sine"
        android:layout_toLeftOf="@+id/sine"
        android:layout_toStartOf="@+id/sine" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/multiply"
        android:layout_row="3"
        android:layout_column="3"
        android:onClick="OnAdd"
        android:layout_below="@+id/cosine"
        android:layout_toLeftOf="@+id/cosine"
        android:layout_toStartOf="@+id/cosine" />

</RelativeLayout>
